<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:right="@dimen/nextTo">
		<shape>
			<solid android:color="?attr/colorPrimaryVariant" />
			<corners
				android:bottomRightRadius="@dimen/navigationDrawerItemHeight"
				android:topRightRadius="@dimen/navigationDrawerItemHeight" />
		</shape>
	</item>
	<item android:right="@dimen/nextTo">
		<ripple android:color="?attr/colorControlHighlight">
			<item>
				<shape>
					<solid android:color="?attr/colorPrimaryVariant" />
					<corners
						android:bottomRightRadius="@dimen/navigationDrawerItemHeight"
						android:topRightRadius="@dimen/navigationDrawerItemHeight" />
				</shape>
			</item>
		</ripple>
	</item>
</layer-list>
