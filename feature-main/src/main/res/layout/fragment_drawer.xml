<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/colorSurface">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/titleTextView"
			style="@style/AppTheme.TextTitleSmall"
			android:layout_width="match_parent"
			android:layout_height="@dimen/rhythmQuadruple"
			android:gravity="center_vertical"
			android:paddingStart="@dimen/rhythm"
			android:paddingEnd="@dimen/rhythm"
			android:text="@string/places"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<View
			android:id="@+id/firstDivider"
			style="@style/AppTheme.Divider"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/placesRecyclerView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/rhythmHalf"
			android:nestedScrollingEnabled="false"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/firstDivider" />

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
