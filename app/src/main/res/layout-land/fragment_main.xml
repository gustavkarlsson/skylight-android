<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".gui.MainActivity">

	<android.support.v4.widget.SwipeRefreshLayout
		android:id="@+id/swipeRefreshLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clipToPadding="false"
			android:padding="16dp">

			<TextView
				android:id="@+id/locationName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAllCaps="true"
				android:textSize="16sp"
				app:layout_constraintBottom_toTopOf="@+id/chance"
				app:layout_constraintEnd_toStartOf="@+id/chanceAndLocationGuide"
				app:layout_constraintStart_toStartOf="parent"
				tools:text="STRYCKSELE" />

			<TextView
				android:id="@+id/chance"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="32sp"
				android:textStyle="bold"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toStartOf="@+id/chanceAndLocationGuide"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				tools:text="High Chance" />

			<TextView
				android:id="@+id/timeSinceUpdate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12sp"
				app:layout_constraintEnd_toStartOf="@+id/chanceAndLocationGuide"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/chance"
				tools:text="3 minutes ago" />

			<android.support.constraint.Guideline
				android:id="@+id/chanceAndLocationGuide"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layout_constraintGuide_percent="0.4" />


			<android.support.v7.widget.CardView
				android:id="@+id/kpIndexCard"
				style="@style/AppTheme.FactorCardView"
				android:layout_width="0dp"
				android:layout_height="64dp"
				android:layout_marginBottom="16dp"
				android:layout_marginStart="16dp"
				app:layout_constraintBottom_toTopOf="@+id/geomagLocationCard"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/chanceAndLocationGuide"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintVertical_chainStyle="spread" />

			<TextView
				android:id="@+id/kpIndexTitle"
				style="@style/AppTheme.FactorCardItem.Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:text="@string/factor_kp_index_title_compact"
				app:layout_constraintBottom_toBottomOf="@id/kpIndexCard"
				app:layout_constraintStart_toStartOf="@id/kpIndexCard"
				app:layout_constraintTop_toTopOf="@id/kpIndexCard" />

			<TextView
				android:id="@+id/kpIndexValue"
				style="@style/AppTheme.FactorCardItem.Value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				app:layout_constraintBottom_toBottomOf="@id/kpIndexCard"
				app:layout_constraintStart_toStartOf="@id/factorTitlesBarrier"
				app:layout_constraintTop_toTopOf="@id/kpIndexCard"
				tools:text="3+" />

			<ProgressBar
				android:id="@+id/kpIndexBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:layout_marginStart="16dp"
				android:elevation="2dp"
				android:indeterminate="false"
				android:max="1000"
				app:layout_constraintBottom_toBottomOf="@id/kpIndexCard"
				app:layout_constraintEnd_toEndOf="@id/kpIndexCard"
				app:layout_constraintStart_toStartOf="@id/factorValuesBarrier"
				app:layout_constraintTop_toTopOf="@id/kpIndexCard"
				tools:progress="37" />


			<android.support.v7.widget.CardView
				android:id="@+id/geomagLocationCard"
				style="@style/AppTheme.FactorCardView"
				android:layout_width="0dp"
				android:layout_height="64dp"
				android:layout_marginBottom="16dp"
				android:layout_marginStart="16dp"
				app:layout_constraintBottom_toTopOf="@+id/weatherCard"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/chanceAndLocationGuide"
				app:layout_constraintTop_toBottomOf="@+id/kpIndexCard" />

			<TextView
				android:id="@+id/geomagLocationTitle"
				style="@style/AppTheme.FactorCardItem.Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:text="@string/factor_geomag_location_title_compact"
				app:layout_constraintBottom_toBottomOf="@id/geomagLocationCard"
				app:layout_constraintStart_toStartOf="@id/geomagLocationCard"
				app:layout_constraintTop_toTopOf="@id/geomagLocationCard" />

			<TextView
				android:id="@+id/geomagLocationValue"
				style="@style/AppTheme.FactorCardItem.Value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				app:layout_constraintBottom_toBottomOf="@id/geomagLocationCard"
				app:layout_constraintStart_toStartOf="@id/factorTitlesBarrier"
				app:layout_constraintTop_toTopOf="@id/geomagLocationCard"
				tools:text="51Â°" />

			<ProgressBar
				android:id="@+id/geomagLocationBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:layout_marginStart="16dp"
				android:elevation="2dp"
				android:indeterminate="false"
				android:max="1000"
				app:layout_constraintBottom_toBottomOf="@id/geomagLocationCard"
				app:layout_constraintEnd_toEndOf="@id/geomagLocationCard"
				app:layout_constraintStart_toStartOf="@id/factorValuesBarrier"
				app:layout_constraintTop_toTopOf="@id/geomagLocationCard"
				tools:progress="20" />


			<android.support.v7.widget.CardView
				android:id="@+id/weatherCard"
				style="@style/AppTheme.FactorCardView"
				android:layout_width="0dp"
				android:layout_height="64dp"
				android:layout_marginBottom="16dp"
				android:layout_marginStart="16dp"
				app:layout_constraintBottom_toTopOf="@+id/darknessCard"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/chanceAndLocationGuide"
				app:layout_constraintTop_toBottomOf="@+id/geomagLocationCard" />

			<TextView
				android:id="@+id/weatherTitle"
				style="@style/AppTheme.FactorCardItem.Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:text="@string/factor_weather_title_compact"
				app:layout_constraintBottom_toBottomOf="@id/weatherCard"
				app:layout_constraintStart_toStartOf="@id/weatherCard"
				app:layout_constraintTop_toTopOf="@id/weatherCard" />

			<TextView
				android:id="@+id/weatherValue"
				style="@style/AppTheme.FactorCardItem.Value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				app:layout_constraintBottom_toBottomOf="@id/weatherCard"
				app:layout_constraintStart_toStartOf="@id/factorTitlesBarrier"
				app:layout_constraintTop_toTopOf="@id/weatherCard"
				tools:text="Clear" />

			<ProgressBar
				android:id="@+id/weatherBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:layout_marginStart="16dp"
				android:elevation="2dp"
				android:indeterminate="false"
				android:max="1000"
				app:layout_constraintBottom_toBottomOf="@id/weatherCard"
				app:layout_constraintEnd_toEndOf="@id/weatherCard"
				app:layout_constraintStart_toStartOf="@id/factorValuesBarrier"
				app:layout_constraintTop_toTopOf="@id/weatherCard"
				tools:progress="100" />


			<android.support.v7.widget.CardView
				android:id="@+id/darknessCard"
				style="@style/AppTheme.FactorCardView"
				android:layout_width="0dp"
				android:layout_height="64dp"
				android:layout_marginStart="16dp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/chanceAndLocationGuide"
				app:layout_constraintTop_toBottomOf="@+id/weatherCard" />

			<TextView
				android:id="@+id/darknessTitle"
				style="@style/AppTheme.FactorCardItem.Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:text="@string/factor_darkness_title_compact"
				app:layout_constraintBottom_toBottomOf="@id/darknessCard"
				app:layout_constraintStart_toStartOf="@id/darknessCard"
				app:layout_constraintTop_toTopOf="@id/darknessCard" />

			<TextView
				android:id="@+id/darknessValue"
				style="@style/AppTheme.FactorCardItem.Value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				app:layout_constraintBottom_toBottomOf="@id/darknessCard"
				app:layout_constraintStart_toStartOf="@id/factorTitlesBarrier"
				app:layout_constraintTop_toTopOf="@id/darknessCard"
				tools:text="60%" />

			<ProgressBar
				android:id="@+id/darknessBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:layout_marginStart="16dp"
				android:elevation="2dp"
				android:indeterminate="false"
				android:max="1000"
				app:layout_constraintBottom_toBottomOf="@id/darknessCard"
				app:layout_constraintEnd_toEndOf="@id/darknessCard"
				app:layout_constraintStart_toStartOf="@id/factorValuesBarrier"
				app:layout_constraintTop_toTopOf="@id/darknessCard"
				tools:progress="60" />


			<android.support.constraint.Barrier
				android:id="@+id/factorTitlesBarrier"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:barrierDirection="end"
				app:constraint_referenced_ids="kpIndexTitle,geomagLocationTitle,weatherTitle,darknessTitle" />

			<android.support.constraint.Barrier
				android:id="@+id/factorValuesBarrier"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:barrierDirection="end"
				app:constraint_referenced_ids="kpIndexValue,geomagLocationValue,weatherValue,darknessValue" />

		</android.support.constraint.ConstraintLayout>

	</android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
