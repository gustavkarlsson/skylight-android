<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".gui.fragments.aurora_data.AuroraDataFragment">

	<Space
		android:id="@+id/grid_center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true" />

	<se.gustavkarlsson.aurora_notifier.android.gui.views.AuroraDataView
		android:id="@+id/aurora_data_solar_activity"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/grid_center"
		android:layout_alignEnd="@id/grid_center"
		android:paddingBottom="16dp"
		android:paddingEnd="16dp"
		custom:drawable="@drawable/ic_timeline_white_48dp"/>

	<se.gustavkarlsson.aurora_notifier.android.gui.views.AuroraDataView
		android:id="@+id/aurora_data_geomagnetic_location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/grid_center"
		android:layout_alignStart="@id/grid_center"
		android:paddingBottom="16dp"
		android:paddingStart="16dp"
		custom:drawable="@drawable/earth_white_48dp" />

	<se.gustavkarlsson.aurora_notifier.android.gui.views.AuroraDataView
		android:id="@+id/aurora_data_weather"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/grid_center"
		android:layout_alignEnd="@id/grid_center"
		android:paddingTop="16dp"
		android:paddingEnd="16dp"
		custom:drawable="@drawable/partly_cloudy_white_48dp" />

	<se.gustavkarlsson.aurora_notifier.android.gui.views.AuroraDataView
		android:id="@+id/aurora_data_sun_position"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/grid_center"
		android:layout_alignStart="@id/grid_center"
		android:paddingTop="16dp"
		android:paddingStart="16dp"
		custom:drawable="@drawable/sunset_white_48dp" />

</RelativeLayout>
