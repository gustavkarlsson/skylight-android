<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/card"
	style="@style/AppTheme.FactorCardView"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/screen_margin">

		<TextView
			android:id="@+id/title"
			style="@style/AppTheme.FactorCardText.Title"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintWidth_default="percent"
			app:layout_constraintWidth_percent=".25"
			tools:text="Current Weather" />

		<TextView
			android:id="@+id/value"
			style="@style/AppTheme.FactorCardText"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="8dp"
			app:layout_constraintEnd_toStartOf="@id/progressBar"
			app:layout_constraintStart_toEndOf="@id/title"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="Slightly cloudier than normal" />

		<ProgressBar
			android:id="@+id/progressBar"
			style="@style/AppTheme.FactorCardProgressBar"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:max="1000"
			android:progress="0"
			app:layout_constraintBottom_toBottomOf="@id/value"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintWidth_default="percent"
			app:layout_constraintWidth_percent=".25"
			tools:progress="37" />

	</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
