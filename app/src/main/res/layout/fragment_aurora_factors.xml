<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".gui.activities.main.fragments.aurora_factors.AuroraFactorFragment">

	<Space
		android:id="@+id/grid_center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true" />

	<se.gustavkarlsson.aurora_notifier.android.gui.activities.main.fragments.aurora_factors.AuroraFactorView
		android:id="@+id/aurora_factor_geomag_activity"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/grid_center"
		android:layout_alignEnd="@id/grid_center"
		custom:name="@string/factor_geomag_activity_title"
		custom:icon="@drawable/ic_wb_sunny_white_12dp" />

	<se.gustavkarlsson.aurora_notifier.android.gui.activities.main.fragments.aurora_factors.AuroraFactorView
		android:id="@+id/aurora_factor_geomag_location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/grid_center"
		android:layout_alignStart="@id/grid_center"
		custom:name="@string/factor_geomag_location_title"
		custom:icon="@drawable/ic_wb_sunny_white_12dp" />

	<se.gustavkarlsson.aurora_notifier.android.gui.activities.main.fragments.aurora_factors.AuroraFactorView
		android:id="@+id/aurora_factor_weather"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/grid_center"
		android:layout_alignEnd="@id/grid_center"
		custom:name="@string/factor_weather_title"
		custom:icon="@drawable/ic_wb_sunny_white_12dp" />

	<se.gustavkarlsson.aurora_notifier.android.gui.activities.main.fragments.aurora_factors.AuroraFactorView
		android:id="@+id/aurora_factor_sun_position"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/grid_center"
		android:layout_alignStart="@id/grid_center"
		custom:name="@string/factor_sun_position_title"
		custom:icon="@drawable/ic_wb_sunny_white_12dp" />

</RelativeLayout>
