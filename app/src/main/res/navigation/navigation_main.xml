<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:startDestination="@id/mainFragment">


	<fragment
		android:id="@+id/mainFragment"
		android:name="se.gustavkarlsson.skylight.android.gui.screens.main.MainFragment"
		android:label="@string/app_name">
		<action
			android:id="@+id/action_mainFragment_to_settingsFragment"
			app:destination="@id/settingsFragment"
			app:enterAnim="@anim/nav_default_enter_anim"
			app:popEnterAnim="@anim/nav_default_pop_enter_anim" />
	</fragment>

	<fragment
		android:id="@+id/introFragment"
		android:name="se.gustavkarlsson.skylight.android.gui.screens.intro.IntroFragment"
		android:label="IntroFragment">
	</fragment>

	<fragment
		android:id="@+id/settingsFragment"
		android:name="se.gustavkarlsson.skylight.android.gui.screens.settings.SettingsFragment"
		android:label="@string/settings" />
	<action
		android:id="@+id/action_start_from_mainFragment"
		app:destination="@id/mainFragment"
		app:enterAnim="@anim/nav_default_enter_anim"
		app:popEnterAnim="@anim/nav_default_pop_enter_anim"
		app:clearTask="true" />
	<action
		android:id="@+id/action_start_from_introFragment"
		app:destination="@id/introFragment"
		app:enterAnim="@anim/nav_default_enter_anim"
		app:popEnterAnim="@anim/nav_default_pop_enter_anim"
		app:clearTask="true" />
</navigation>
