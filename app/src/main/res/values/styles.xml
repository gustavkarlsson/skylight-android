<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
 		<item name="android:colorBackground">@color/background</item>
		<item name="colorOnBackground">@color/on_background</item>

		<item name="colorSurface">@color/surface</item>
		<item name="colorOnSurface">@color/on_surface</item>

		<item name="colorError">@color/error</item>
		<item name="colorOnError">@color/error</item>

		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryVariant">@color/primary_variant</item>
		<item name="colorPrimaryDark">@color/primary_variant</item>
		<item name="colorOnPrimary">@color/on_primary</item>

		<item name="colorSecondary">@color/secondary</item>
		<item name="colorSecondaryVariant">@color/secondary_variant</item>
		<item name="colorOnSecondary">@color/on_secondary</item>

		<item name="android:textColorPrimary">@color/on_background_weaker</item>
		<item name="android:textColorSecondary">@color/on_background</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
	</style>


	<!-- Toolbar -->

	<style name="AppTheme.Toolbar">
		<item name="android:textColorPrimary">@color/on_background</item>
		<item name="android:textColorSecondary">@color/on_background</item>
	</style>


	<!-- Main -->

	<style name="AppTheme.ChanceText">
		<item name="android:fontFamily">@font/open_sans_condensed_light</item>
		<item name="android:textSize">48sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">@color/on_background</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">0</item>
		<item name="android:shadowRadius">4</item>
	</style>


	<!-- Factor card -->

	<style name="AppTheme.FactorCardView" parent="Widget.MaterialComponents.CardView">
		<item name="cardBackgroundColor">@color/surface</item>
		<item name="cardElevation">2dp</item>
	</style>

	<style name="AppTheme.FactorCardText" parent="@style/TextAppearance.MaterialComponents.Body1" />

	<style name="AppTheme.FactorCardText.Title" parent="@style/TextAppearance.MaterialComponents.Body1">
		<item name="android:textColor">@color/on_surface</item>
	</style>

	<style name="AppTheme.FactorCardProgressBar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
		<item name="android:indeterminate">false</item>
	</style>


	<!-- Bottom sheet -->

	<style name="AppTheme.BottomSheet">
		<item name="android:background">@color/background</item>
	</style>

	<!-- Misc -->

	<style name="AppTheme.ClickableIcon">
		<item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
	</style>

	<!-- TODO Replace with material extended FAB when available -->
	<style name="AppTheme.ExtendedFab" parent="Widget.MaterialComponents.Button.UnelevatedButton">
		<item name="backgroundTint">@color/secondary</item>
		<item name="android:textColor">@color/on_secondary</item>
		<item name="android:height">56dp</item>
		<item name="cornerRadius">28dp</item>
	</style>

</resources>
