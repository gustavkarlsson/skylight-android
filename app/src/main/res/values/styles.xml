<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppTheme" parent="Theme.MaterialComponents">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
	</style>

	<style name="AppTheme.FactorCardView">
		<item name="android:foreground">?attr/selectableItemBackground</item>
		<item name="cardBackgroundColor">#383838</item>
	</style>

	<style name="AppTheme.FactorCardItem">
		<item name="android:elevation">2dp</item>
	</style>

	<style name="AppTheme.FactorCardItem.Title">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="AppTheme.FactorCardItem.Value">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#AAA</item>
	</style>

</resources>
